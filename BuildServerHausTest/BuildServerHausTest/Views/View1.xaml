<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" x:Class="BuildServerHausTest.Views.View1"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <dxlc:LayoutControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <dxlc:LayoutItem Label="LayoutItem">
                <TextBox x:Name="textBox" TextWrapping="Wrap" Text="TextBox"/>
            </dxlc:LayoutItem>

        </dxlc:LayoutControl>

    </Grid>
</UserControl>
